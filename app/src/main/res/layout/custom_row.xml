<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/itemImageID"
        android:layout_width="205dp"
        android:layout_height="120dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@null"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sushipicture"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/priceID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="17dp"
        android:text="Pris"
        android:textAlignment="textStart"
        app:layout_constraintLeft_toRightOf="@+id/itemImageID"
        app:layout_constraintTop_toBottomOf="@+id/nameID"
        android:layout_marginStart="20dp" />

    <ImageView
        android:id="@+id/orderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:scaleType="fitEnd"
        android:padding="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="-8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_add_to_cart"
        android:background="@drawable/roundedbutton"
        android:clickable="true"/>

    <TextView
        android:id="@+id/nameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:text="Navn"
        android:textAlignment="textStart"
        app:layout_constraintLeft_toRightOf="@+id/itemImageID"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/custom_chackbox_selector"
        app:layout_constraintRight_toRightOf="@+id/itemImageID"
        app:layout_constraintBottom_toBottomOf="@+id/itemImageID"
        android:padding="15dp"/>

</android.support.constraint.ConstraintLayout>